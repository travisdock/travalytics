<div class="container">
  <div class="page-header">
    <div>
      <h1 class="page-title">Events</h1>
      <p class="page-subtitle"><%= @site.name %> - <%= @site.domain %></p>
    </div>
    <div>
      <%= link_to "â† Back to Dashboard", dashboard_path(site_id: @site.id), class: "btn btn-secondary" %>
    </div>
  </div>

  <!-- Filters -->
  <%= form_with url: events_dashboard_path, method: :get, local: true, class: "filter-form" do |form| %>
    <%= hidden_field_tag :site_id, @site.id %>
    <div class="form-group">
      <%= form.label :start_date, "From:", class: "form-label" %>
      <%= form.date_field :start_date, value: params[:start_date], class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :end_date, "To:", class: "form-label" %>
      <%= form.date_field :end_date, value: params[:end_date], class: "form-input" %>
    </div>
    <div>
      <%= form.submit "Filter", class: "btn btn-primary" %>
    </div>
  <% end %>

  <!-- Events Table -->
  <div class="table-container">
    <% if @events && @events.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Event</th>
            <th>Page</th>
            <th>Properties</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td style="font-weight: 500;">
                <%= event.event_name.humanize %>
              </td>
              <td style="color: #6b7280;">
                <%= event.page_path || event.page_url || "-" %>
              </td>
              <td>
                <% if event.properties.present? %>
                  <details>
                    <summary>View</summary>
                    <pre style="margin-top: 0.5rem; font-size: 0.75rem; background-color: #f3f4f6; padding: 0.5rem; border-radius: 0.25rem;"><%= JSON.pretty_generate(event.properties) %></pre>
                  </details>
                <% else %>
                  <span style="color: #9ca3af;">-</span>
                <% end %>
              </td>
              <td style="color: #6b7280;">
                <%= event.created_at.strftime("%b %d, %Y %l:%M %p") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        No events found for the selected date range
      </div>
    <% end %>
  </div>
</div>